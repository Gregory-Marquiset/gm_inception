listen=YES
listen_ipv6=NO
anonymous_enable=NO
local_enable=YES
write_enable=YES

# chrooter les utilisateurs
chroot_local_user=YES
allow_writeable_chroot=YES
local_root=${FTP_ROOT}

# permissions group (g+w) : fichiers 664, dossiers 775
local_umask=002
file_open_mode=0664

use_localtime=YES
xferlog_enable=YES
connect_from_port_20=YES
seccomp_sandbox=NO

# mode passif
pasv_enable=YES
pasv_min_port=${PASV_MIN}
pasv_max_port=${PASV_MAX}
pasv_address=${PASV_ADDRESS}
